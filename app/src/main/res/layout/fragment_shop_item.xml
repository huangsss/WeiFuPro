<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shop_activity_item_height">

    <TextView
        android:id="@+id/shop_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/shop_activity_item_left"
        android:layout_marginTop="@dimen/shop_activity_item_padding"
        android:text="@string/shop_item_time"
        android:textColor="@color/gray_shop"
        android:textSize="@dimen/shop_activity_item_top_text" />

    <TextView
        android:id="@+id/shop_item_for_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shop_activity_item_padding"
        android:layout_toRightOf="@+id/shop_item_time"
        android:text="2016:04:05"
        android:textColor="@color/gray_shop"
        android:textSize="@dimen/shop_activity_item_top_text" />

    <TextView
        android:id="@+id/shop_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_item_time"
        android:layout_marginLeft="@dimen/shop_activity_item_left"
        android:layout_marginTop="@dimen/shop_activity_item_top"
        android:text="@string/shop_item_name"
        android:textColor="@color/bottom_text_color"
        android:textSize="@dimen/shop_activity_item_text" />

    <TextView
        android:id="@+id/shop_item_for_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_item_time"
        android:layout_marginTop="@dimen/shop_activity_item_top"
        android:layout_toRightOf="@+id/shop_item_name"
        android:text="北京香山"
        android:textColor="@color/bottom_text_color"
        android:textSize="@dimen/shop_activity_item_text" />

    <ImageView
        android:id="@+id/shop_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/shop_activity_item_img_right"
        android:src="@drawable/selector_item_img" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_activity_item_view_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/shop_activity_item_left"
        android:layout_marginRight="@dimen/shop_activity_item_left"
        android:background="@color/gray_bg" />
</RelativeLayout>